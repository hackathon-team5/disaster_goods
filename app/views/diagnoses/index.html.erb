<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <%= form_with local: true do |f| %>
        <div class="form-group">
          <%= f.label :区市町名 %>
          <%= f.text_field :district, class: 'form-control' , placeholder: '選択してください'%>
        </div>
        <div class="form-group">
          <%= f.label :町丁目名 %>
          <%= f.text_field :town, class: 'form-control', placeholder: '選択してください'%>
        </div>
      <% end %>
      <div class="actions pt-5 text-center">
        <%= link_to "検索する", "#", class: "btn btn-outline-dark" %>
      </div>
    </div>
  </div>
</div>
