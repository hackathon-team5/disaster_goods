<div class="container pt-4">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h2>管理者ログイン画面</h2>
      <%= form_with url: login_path, method: :post, local: true do |f| %>
        <div class="form-group pt-2">
          <%= f.label :email, User.human_attribute_name(:email) %><br />
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group pt-2">
          <%= f.label :password, User.human_attribute_name(:password) %><br />
          <%= f.password_field :password, class: "form-control" %>
        </div>

        <div class="actions pt-4 text-center">
          <%= f.submit (t 'defaults.login'), class: 'main-btn' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
